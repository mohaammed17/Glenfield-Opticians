<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # If the requested resource isn't an existing file or directory,
  # rewrite the URL to index.html so the SPA router can handle it
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.html [L]
</IfModule>